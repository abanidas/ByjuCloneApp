<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:layout_margin="1dp">

        <LinearLayout
            android:id="@+id/ll_card_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Interpretation Test 01"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/ll_start_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START "
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    android:textColor="#09f995"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_right_arrow_green"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"/>
            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_load_test"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:indeterminateTint="#09f995"
                android:visibility="gone"/>

        </LinearLayout>


</android.support.v7.widget.CardView>